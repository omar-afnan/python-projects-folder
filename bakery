a = "Welcome to our bakery"

chocolate_price = 2
vanilla_price = 1.50
strawberry_price = 1.75

chocolate_user = int(input("How many chocolate cupcakes do you want? "))
vanilla_user = int(input("How many vanilla cupcakes do you want? "))
strawberry_user = int(input("How many strawberry cupcakes do you want? "))

price1 = chocolate_price * chocolate_user
price2 = vanilla_price * vanilla_user
price3 = strawberry_price * strawberry_user


total_cost = price1 + price2 + price3  # Assuming you've already calculated the total cost

total_cost = price1 + price2 + price3  # Assuming you've already calculated the total cost

amount = float(input("How would you like to pay, sir? "))

if amount >= total_cost:
    change = amount - total_cost
    if change > 0:
        print(f"Thank you for your purchase! Your change is ${change:.2f}")
    else:
        print("Thank you for your exact payment!")
else:
    print("Insufficient funds. Please provide enough money for the purchase.")




print(a)
print(" the price of Chocolate cupcakes are:", price1)
print(" the price of Vanilla cupcakes are:", price2)
print(" the price of Strawberry cupcakes are :", price3)
